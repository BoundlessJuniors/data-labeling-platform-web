# Database
# Docker PostgreSQL runs on port 5433 (to avoid conflict with local PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/datalabeling?schema=public"

# JWT Configuration
# IMPORTANT: Change this to a secure random string in production!
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Redis
REDIS_URL="redis://localhost:6379"

# App
NODE_ENV="development"
PORT=3000

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173"

# Docker (optional - used by docker-compose)
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="datalabeling"
POSTGRES_PORT=5433
REDIS_PORT=6379
